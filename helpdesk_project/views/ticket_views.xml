<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ticket_project_form" model="ir.ui.view">
            <field name="name">view.ticket_project.form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref='helpdesk_mgmt.ticket_view_form'/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Project" name="project">
                        <group>
                            <field name="project_id"/>
                            <field name="task_id"/>
                         </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="helpdesk_ticket_project_view_search" model="ir.ui.view">
            <field name="name">helpdesk_ticket.project.view.search</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk_mgmt.helpdesk_ticket_view_search"/>
            <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
            </field>      
            <group position="inside">
                <filter string="Project" name="Project" domain="[]" context="{'group_by': 'project_id'}"/>
            </group>
            </field>
        </record>
    </data>
</odoo>